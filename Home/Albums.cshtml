@using PagedList.Mvc
@model PagedList.IPagedList<Ocean2014.ViewModel.AlbumDto>
@{
    ViewBag.Title = Resource.Album;
}
<div class="container mt30">
    <h1 id="default-title">@Resource.Album</h1>
    <div class="row" id="albums">
        @foreach (var albumDto in Model)
        {
            <div class="col-md-3 col-sm-4 col-xs-6">
                <div class="box-album">
                    <a href="@Url.Action("AlbumDetail", new {albumId = albumDto.Id, name = Html.ConvertToUnSign(albumDto.Name), Culture})">
                        <img src="@albumDto.Image?w=300&h=300&mode=crop" alt="@albumDto.Name" class="img-responsive" />
                    </a>
                    <div class="album-caption">
                        <a href="@Url.Action("AlbumDetail", new {albumId = albumDto.Id, name = Html.ConvertToUnSign(albumDto.Name), Culture})">@albumDto.Name</a>
                    </div>
                </div>
            </div>
        }
    </div>
    @if (Model.PageCount > 1)
    {
        <div class="text-center">
            @Html.PagedListPager(Model, page => Url.Action("Albums", new { page, Culture }))
        </div>
    }
</div>