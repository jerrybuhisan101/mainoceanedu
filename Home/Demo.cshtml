<div class="container mt30 triggerAnimation animated" data-animate="bounceInRight">
    <div class="module-name text-center">
        <h2>@Resource.StudentComments</h2>
    </div>
    <div class="row" id="list-comment">
        @{
            var i = 1;
        }
        @foreach (var news in Model.News.Take(2))
        {
            var classCss = "background-course";
            if (i % 2 == 0)
            {
                classCss = "background-course-reverse";
            }
            <div class="col-sm-6 col-xs-12 comment-item">
                <div class="@classCss">
                    <div class="box-img-cm">
                        <div class="icon-star"></div>
                        @if (news.Image != null)
                        {
                            <a href="@Url.Action("News", new {newsId = news.Id, name = Html.ConvertToUnSign(news.Subject), culture = UICulture})">
                                <img src="@news.Image?w=202&h=144&mode=crop" class="hvr-rotate" alt="@news.Subject" />
                            </a>
                        }
                    </div>
                    <div class="bg-text-cm hvr-float-shadow">
                        <p>
                            <a class="font-roboto title-cm" href="@Url.Action("News", new {newsId = news.Id, name = Html.ConvertToUnSign(news.Subject)})">@news.Subject</a>
                        </p>
                        <p>@Html.CutString(news.Description, 200)</p>
                    </div>
                </div>
            </div>
            i++;
        }
    </div>
    <div class="news-line-1"></div>
    <div class="text-center border-see-more">
        <a href="javascript:;" onclick="showMoreComent()" class="btn btn-sm btn-ocean font-dax-light hvr-shutter-out-vertical">Click để xem thêm<i class="fa fa-caret-down"></i></a>
    </div>
</div>
