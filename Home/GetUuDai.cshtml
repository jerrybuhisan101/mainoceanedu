@model Ocean2014.ViewModel.RegUuDai
@{
    ViewBag.Title = Resource.RegUudai;
    ViewBag.Description = Resource.RegUudai;
    ViewBag.Keywords = Resource.RegUudai;
    
    var sr = new StreamReader(Server.MapPath("/images/contact/uudaiinfo.txt"));
    var uudaiInfo = sr.ReadToEnd();
    sr.Close();
}
<div class="container mt30">
    <div class="row">
        @Html.Action("LeftAbout")
        <div class="col-sm-8">
            <div class="box-module-center-reserve" style="margin-top: -2px">
                <h1>ĐĂNG KÝ NHẬN ƯU ĐÃI HỌC TIẾNG ANH TẠI OCEAN EDU</h1>
            </div>
            <div class="body-content">
                @Html.Raw(uudaiInfo)
            </div>
            @if (ViewBag.Result == 1)
            {
                <p class="alert alert-success small text-center mt15">@Resource.GetUuDaiSuccess</p>
            }
            else
            {
                <p class="alert alert-info small text-center mt30">@Resource.NoticeContact</p>
                <form action="@Url.Action("GetUuDai", new {Culture})" method="POST" class="form-horizontal mt30 mb50">
                    @Html.ValidationSummary(true)
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        @Html.LabelFor(a => a.FullName, new { @class = "control-label col-sm-3" })
                        <div class="col-sm-9">
                            @Html.TextBoxFor(a => a.FullName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(a => a.FullName)
                        </div>
                    </div>
                    @*<div class="form-group">
                        @Html.LabelFor(a => a.Birthday, new { @class = "control-label col-sm-3" })
                        <div class="col-sm-9">
                            @Html.TextBoxFor(a => a.Birthday, new { @class = "form-control datepicker"})
                            @Html.ValidationMessageFor(a => a.Birthday)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(a => a.ParentName, new { @class = "control-label col-sm-3" })
                        <div class="col-sm-9">
                            @Html.TextBoxFor(a => a.ParentName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(a => a.ParentName)
                        </div>
                    </div>*@
                    <div class="form-group">
                        @Html.LabelFor(a => a.Mobile, new { @class = "control-label col-sm-3" })
                        <div class="col-sm-9">
                            @Html.TextBoxFor(a => a.Mobile, new { @class = "form-control" })
                            @Html.ValidationMessageFor(a => a.Mobile)
                        </div>
                    </div>
                    @*<div class="form-group">
                        @Html.LabelFor(a => a.Address, new { @class = "control-label col-sm-3" })
                        <div class="col-sm-9">
                            @Html.TextBoxFor(a => a.Address, new { @class = "form-control" })
                            @Html.ValidationMessageFor(a => a.Address)
                        </div>
                    </div>*@
                    <div class="form-group">
                        @Html.LabelFor(a => a.Email, new { @class = "control-label col-sm-3" })
                        <div class="col-sm-9">
                            @Html.TextBoxFor(a => a.Email, new { @class = "form-control" })
                            @Html.ValidationMessageFor(a => a.Email)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(a => a.CourseId, new { @class = "control-label col-sm-3" })
                        <div class="col-sm-9">
                            @Html.DropDownListFor(a => a.CourseId, Model.CourseList, Resource.RequiredCourse, new { @class = "form-control" })
                            @Html.ValidationMessageFor(a => a.CourseId)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(a => a.OfficeId, new { @class = "control-label col-sm-3" })
                        <div class="col-sm-9">
                            @Html.DropDownListFor(a => a.OfficeId, Model.OfficeList, Resource.RequiredOffice, new { @class = "form-control" })
                            @Html.ValidationMessageFor(a => a.OfficeId)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-9 col-sm-offset-3">
                            <button type="submit" class="btn btn-ocean"><i class="fa fa-check"></i> @Resource.Register</button>
                            <button type="reset" class="btn btn-link">@Resource.Reset</button>
                        </div>
                    </div>
                </form>
            }
            <div class="bg-bottom-box-center"></div>
        </div>
    </div>
</div>
@section scripts
{
    <script src="~/Scripts/jquery.inputmask.bundle.min.js"></script>
    <script>
        $(".datepicker").inputmask("date", { "placeholder": "dd/mm/yyyy" })
    </script>
}