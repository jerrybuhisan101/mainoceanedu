@model Ocean2014.ViewModel.HomeViewModel
@{
    ViewBag.Title = "Học tiếng Anh | Tiếng Anh Trẻ em | Tiếng anh Thiếu nhi | Anh ngữ Ocean";
}
<div class="wrapper-page">
    <div class="body-content">
        <div class="row">
            @for (var i = 1; i < 7; i++)
            {
                string name;
                switch (i)
                {
                    case 1:
                        name = "Tiếng Anh Thiếu Nhi";
                        break;
                    case 2:
                        name = "Tiếng Anh Thiếu Niên";
                        break;
                    case 3:
                        name = "Tiếng Anh Giao tiếp";
                        break;
                    case 4:
                        name = "Ngữ Pháp Tiếng Anh";
                        break;
                    case 5:
                        name = "Luyện Thi TOEIC";
                        break;
                    default:
                        name = "Luyện Thi IELTS";
                        break;
                }
                <div class="col-lg-6">
                    <div class="item-product">
                        <a href="#">
                            <img src="@string.Format("/Content/images/{0}.jpg", i)" alt="" />
                            <h2>@name</h2>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<div class="bg-white clearfix">
    <div class="wrapper-page">
        <div class="row">
            <div class="col-lg-7">
                <div class="title-box clearfix">
                    <h3 class="title-box_primary">Tin tức và Sự kiện</h3>
                </div>
                @foreach (var news in Model.News)
                {
                    <div class="news-item-list col-lg-6">
                        <a href="#"><img src="@string.Format("http://ocean.edu.vn{0}", news.Image)" alt="@news.Subject" title="@news.Subject" /></a>
                        <div class="date-time">@news.CreateDate.ToString("D")</div>
                        <h4><a href="#" title="@news.Subject">@news.Subject</a></h4>
                    </div>
                }
            </div>
            <div class="col-lg-5">
                <div class="title-box clearfix">
                    <h3 class="title-box_primary">Video</h3>
                </div>
                @{
                    var first = Model.VideoDtos.First();
                    var st = first.YoutubeLink.IndexOf("youtu.be/", StringComparison.Ordinal) + 9;
                    var url = first.YoutubeLink.Substring(st);
                }
                <iframe width="399" height="260" src="//www.youtube.com/embed/@url?rel=0" frameborder="0" allowfullscreen="1"></iframe>
                @if (Model.VideoDtos.Count() > 1)
                {
                    <ul id="video-list">
                        @foreach (var videoDto in Model.VideoDtos)
                        {
                            <li><a href="" title="@videoDto.Subject">@Html.DisplayFor(model => videoDto.Subject)</a></li>
                        }
                    </ul>
                }
            </div>
        </div>
    </div>
</div>
<div class="wrapper-page">
    <div class="row">
        <div class="col-lg-7">
            <div class="title-box clearfix">
                <h3 class="title-box_primary" style="background: #f2f2f2">Đăng ký học</h3>
            </div>
            <table class="form-register">
                <tr>
                    <td>Họ và tên</td>
                    <td><input type="text" name="Name" class="form-control" placeholder="Nhập họ và tên" /></td>
                </tr>
                <tr>
                    <td>Điện thoại</td>
                    <td><input type="text" name="Mobile" class="form-control" placeholder="Số điện thoại liên hệ" /></td>
                </tr>
                <tr>
                    <td>Email</td>
                    <td><input type="text" name="Email" class="form-control" placeholder="Địa chỉ Email" /></td>
                </tr>
                <tr>
                    <td>Địa chỉ</td>
                    <td><input type="text" name="Address" class="form-control" placeholder="Địa chỉ liên hệ" /></td>
                </tr>
                <tr>
                    <td>Khóa học</td>
                    <td>
                        <select class="form-control" name="Course">
                            <option value="">Khóa học</option>
                            <option value="1">Anh văn thiếu nhi từ 6 - 11 tuổi</option>
                            <option value="2">Anh văn thiếu niên từ 11-16 tuổi</option>
                            <option value="3">Anh văn giao tiếp tổng quát</option>
                            <option value="4">Ngữ pháp Tiếng Anh</option>
                            <option value="5">Tiếng Anh dành cho Doanh nghiệp</option>
                            <option value="6">Luyện thi TOEIC</option>
                            <option value="7">Luyện thi IELTS</option>
                            <option value="8">Luyện thi TOEFL</option>
                            <option value="9">Tiếng Trung giao tiếp</option>
                            <option value="10">Tiếng Nhật giao tiếp</option>
                            <option value="11">Tiếng Hàn giao tiếp</option>
                            <option value="12">Tư vấn du học</option>
                            <option value="13">Khóa học phát âm và nghe nói chuyên nghiệp</option>
                            <option value="14">Khóa học đặc biệt</option>
                            <option value="15">Luyên thi B1, B2, C1 khung tham chiếu Châu Âu</option>
                            <option value="16">Luyện kỹ năng Tiếng Anh</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td>Chi nhánh</td>
                    <td>
                        <select class="form-control" name="Office">
                            <option value="">Chi nhánh</option>
                            <option value="1">Ocean Hà Nội</option>
                            <option value="2">Ocean Việt Trì</option>
                            <option value="3">Ocean Vĩnh Yên</option>
                            <option value="4">Ocean Thái Nguyên</option>
                            <option value="5">Ocean Bắc Ninh</option>
                            <option value="6">Ocean Bắc Giang</option>
                            <option value="7">Ocean Từ Sơn</option>
                            <option value="8">Ocean Hải Dương</option>
                            <option value="9">Ocean Thái Bình</option>
                            <option value="10">Ocean Nam Định</option>
                            <option value="11">Ocean Thanh Hóa</option>
                            <option value="12">Ocean Vinh - Nghệ An</option>
                            <option value="13">Ocean Buôn Mê Thuột</option>
                            <option value="14">Ocean Phủ Lý</option>
                            <option value="15">Ocean Ninh Bình</option>
                            <option value="16">Ocean Phúc Yên</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td><input type="submit" value="Đăng ký học" class="button" /></td>
                </tr>
            </table>
        </div>
        <div class="col-lg-5">
            <div class="title-box clearfix">
                <h3 class="title-box_primary" style="background: #f2f2f2">Hình ảnh</h3>
            </div>
            <div class="row">
                @foreach (var album in Model.Albums)
                {
                    <div class="col-lg-6 item-album-list"><img src="@string.Format("http://ocean.edu.vn{0}", album.album_image)" alt="" /></div>
                }
            </div>
        </div>
    </div>
</div>