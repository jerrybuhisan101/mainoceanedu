@model Ocean2014.ViewModel.HomeViewModel
@{

    ViewBag.Title = "Hoc tieng Anh Vietnam";
    ViewBag.Description = "Ocean Edu là trung tam tieng anh uy tín hàng đầu tại Việt Nam. Hoc tieng anh với giáo viên người Philipine và giáo viên người bản xứ. Ocean Edu có hơn 30 chi nhánh trên toàn quốc";
    ViewBag.Keywords = "trung tâm tiếng Anh , Trung tâm Anh ngữ Việt Nam , Học tiếng Anh, Trung tâm tiếng anh , học tiếng Anh, học tiếng anh , ngôn ngữ tiếng Anh, Dương Edu , Hà Nội bằng tiếng Anh , trung tâm ngoại ngữ Hà Nội";
    ViewBag.Canonical = Request.Url;

    var firstbanner = Model.Banners.FirstOrDefault(a => a.Advertise_Potision == 1);
    if (firstbanner != null)
    {
        ViewBag.ImageThumb = "http://ocean.edu.vn" + Path.Combine("/images/banners/", firstbanner.Advertise_Image);
    }
    var bannerPopup = Model.Banners.FirstOrDefault(a => a.Advertise_Potision == 5);
}

<h1 id="header-home" style="display:block !important;font-size: 0;
    position: absolute; ">Hoc tieng anh Vietnam, Trung tam tieng Anh, Ocean Edu Vietnam hoc tieng anh voi 100% giao vien nuoc ngoai.</h1>
<div class="container mt20">
    <div id="camera-slideshow" class="pattern_1">
        @foreach (var banner in Model.Banners.Where(a => a.Advertise_Potision == 1))
        {
        <div data-src="@Path.Combine("/images/banners/",banner.Advertise_Image)" data-thumb="" data-link="@banner.Advertise_Link" data-target="_self">
        </div>
        }
    </div>
</div>
<div class="container hidden-xs">
    <div id="sticky">
        <a href="@Url.Action("RegisterOnline", new {Culture})"><img src="~/Content/images/skin/reg-online-icon.png" alt="Hoc tieng anh Enroll trực tuyến" /></a>
    </div>
</div>
