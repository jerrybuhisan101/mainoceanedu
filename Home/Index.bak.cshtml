        <div class="col-md-3 col-xs-12">
            <div class="box3" style="overflow: hidden; position: relative;">
                <div class="box-img-news">
                    @if (Model.VideoDto != null)
                    {
                        var st = Model.VideoDto.YoutubeLink.IndexOf("youtu.be/", StringComparison.Ordinal) + 9;
                        var url = Model.VideoDto.YoutubeLink.Substring(st);
                    <a href="@Model.VideoDto.YoutubeLink" class="fancybox-media"><img src="//i.ytimg.com/vi_webp/@url/mqdefault.webp" alt="@Model.VideoDto.Subject" /></a>
