                    <div class="clearfix">
                        <div class="bg-1"></div>
                        <div class="intro-caption">
                            @Resource.GiaoTiep
                        </div>
                        <div class="bg-2"></div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-xs-6 text-center">
                <div class="hvr-bob">
                    <img src="~/Content/images/skin/icon-4.jpg" class="img-responsive" alt="Hoc tieng anh, Trung Tam tieng anh ocean" />
                    <div class="clearfix">
                        <div class="bg-1"></div>
                        <div class="intro-caption">
                            @Resource.ThucTe
                        </div>
                        <div class="bg-2"></div>
