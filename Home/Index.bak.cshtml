<div class="container triggerAnimation animated" data-animate="fadeInUp">
    <div class="module-name text-center" style="border-top: 0">
        <h2>@Resource.ListCourseHome</h2>
    </div>
    <div class="row" id="list-course">
        @{
            var j = 1;
        }
        @foreach (var groupCourse in Model.GroupCourses)
        {
            string hoverclass;
            switch (j)
            {
                case 2:
                    hoverclass = "hover-orange";
                    break;
                case 3:
                    hoverclass = "hover-green";
                    break;
                case 4:
                    hoverclass = "hover-red";
                    break;
                default:
                    hoverclass = "hover-pink";
                    break;
            }
        <div class="col-sm-6 col-xs-12 hvr-float-shadow course-item">
            <div class="background-course @hoverclass">
                <div class="bg-trans-top">
                    <div class="row">
                        <div class="col-xs-8" style="z-index: 2">
                            <div class="bg-number font-dax-bold">
                                @string.Format("0{0}", j)
                            </div>
                            <div class="text-course">
                                <a href="@Url.Action("GroupCourse", new {gId = groupCourse.Id, name = Html.ConvertToUnSign(groupCourse.Name), Culture})">
                                    @(Culture == "vi-VN" ? groupCourse.Name : groupCourse.Name_En)
                                </a>
                            </div>
                            <div class="button-course">
                                <a href="@Url.Action("GroupCourse", new {gId = groupCourse.Id, name = Html.ConvertToUnSign(groupCourse.Name), Culture})" class="btn btn-sm btn-danger"><i class="fa fa-caret-right"></i> @Resource.SeeDetail</a>
                            </div>
                        </div>
                        <div class="col-xs-4">
                            <div class="bg-cheo"></div>
                            <div class="img-course">
                                @if (groupCourse.Image != null)
                                    {
                                    <img src="@Path.Combine("/images/course/", groupCourse.Image)" alt="Ocean Edu Hoc tieng anh , trung tam tieng anh" class="img-responsive hvr-wobble-horizontal" />
                                    }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
            j++;
        }
    </div>
    <div class="text-center">
        <a href="javascript:;" onclick="showMoreCourse()" class="btn btn-sm btn-ocean font-dax-light hvr-shutter-out-vertical">@* @Resource.MoreCourse *@ See more courses <i class="fa fa-caret-down"></i></a>
    </div>
</div>
<div class="container mt30 triggerAnimation animated" data-animate="fadeInUp">
    <div class="module-name text-center">
        <h2>@Resource.NewEvent</h2>
    </div>
    <div class="row mt15">
        @foreach (var news in Model.OceanNews)
        {
        <div class="col-sm-6 col-xs-12 comment-item">
            <div class="background-course">
                <div class="row">
                    <div class="col-xs-5">
                        <div class="box-img-cm">
                            @if (news.Image != null)
                                {
                                <a href="@Url.Action("News", new {newsId = news.Id, name = Html.ConvertToUnSign(news.Subject), culture = UICulture})">
                                    <img src="@news.Image?w=222&h=146&mode=crop" class="img-thumbnail hvr-rotate" alt="Hoc tieng anh, @news.Subject" />
                                </a>
                                }
                        </div>
                    </div>
                    <div class="col-xs-7" style="padding-left: 0">
