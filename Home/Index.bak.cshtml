                    </div>
                    <div class="box-button-news">
                        <a href="@Url.Action("ListVideo")" class="btn btn-sm btn-danger"><i class="fa fa-caret-right"></i> @Resource.SeeDetail</a>
                    </div>
                </div>
            </div>
